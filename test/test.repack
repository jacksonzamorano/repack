output description @test {
	print_commands true
}

output postgres @test/postgres #models;
output typescript_class @test/ts_classes {
	make_index true
}
output typescript_interface @test/ts_interfaces {
	make_index true
}
output rust @test/rust_vanilla;

record User @users #models {
	id int32 #pk #increment
	name string
	email string
	password string
	org_id ref(Organization.id)
	personal_org ref(Organization.id)
}

record Organization @orgs #models {
	id int32 #pk #increment
	name string
	email string
}

record UserPublic: User #orm {
	*
	org_name from(org_id.name)
}

